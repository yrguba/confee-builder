{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "Confee",
    "version": "../package.json"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "cross-env BROWSER=none npm run start",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "confee.tauri",
      "publisher": "Unknown Publisher",
      "copyright": "Copyright Notice",
      "icon": [
        "icons/logo.ico",
        "icons/logo.png",
        "icons/logo.icns"
      ],
      "resources": [],
      "externalBin": [],
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "systemTray": {
      "iconPath": "icons/tray.ico",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": true,
      "clipboard": {
        "all": false,
        "readText": false,
        "writeText": false
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": false,
        "save": false
      },
      "fs": {
        "all": true,
        "scope": [
          "**"
        ],
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "globalShortcut": {
        "all": false
      },
      "http": {
        "all": true,
        "scope": [
          "http://*",
          "https://*",
          "https://dev.chat.softworks.ru",
          "https://prod.chat.softworks.ru"
        ]
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "process": {
        "all": false,
        "exit": false,
        "relaunch": true,
        "relaunchDangerousAllowSymlinkMacos": false
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "",
            "cmd": "",
            "args": true
          }
        ]
      },
      "window": {
        "all": false,
        "center": false,
        "close": true,
        "create": false,
        "hide": false,
        "maximize": true,
        "minimize": true,
        "print": false,
        "requestUserAttention": false,
        "setAlwaysOnTop": false,
        "setCursorGrab": false,
        "setCursorIcon": false,
        "setCursorPosition": false,
        "setCursorVisible": false,
        "setDecorations": true,
        "setFocus": true,
        "setFullscreen": true,
        "setIcon": false,
        "setMaxSize": false,
        "setMinSize": false,
        "setPosition": false,
        "setResizable": false,
        "setSize": true,
        "setSkipTaskbar": false,
        "setTitle": false,
        "show": false,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "windows": [
      {
        "title": "Confee",
        "label": "main",
        "minWidth": 450,
        "minHeight": 470,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "fileDropEnabled": false
      }
    ],
    "updater": {
      "active": true,
      "endpoints": [
        "https://prod.api.confee.ru/api/v2/release/{{target}}/v{{current_version}}",
        "https://dev.api.confee.ru/api/v2/release/{{target}}/v{{current_version}}",
        "https://dev.chat.softworks.ru/api/v2/files/get_latest_desktop_release/{{target}}/v{{current_version}}",
        "https://prod.chat.softworks.ru/api/v2/files/get_latest_desktop_release/{{target}}/v{{current_version}}"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVBOTc0NDYyMjk5NjgxMkUKUldRdWdaWXBZa1NYNmhKakdadGdlSEZhRDEyNHh6SklJQlVqT0UrcEF6ZjhQOWFvUm1Pakl4TlcK"
    },
    "security": {
      "csp": null
    }
  }
}
